generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  artistId    Int
  artist      Artist   @relation(fields: [artistId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Artist {
  id          Int      @id @default(autoincrement())
  name        String
  age         Int?
  email       String   @unique
  phone       String
  password    String
  locationId  Int?     
  videos      Video[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Location {
  id          Int @id @default(autoincrement())
  country     String
  address     String
}